@using MVCWebSite.product_scope
@model Brand

@{
    ViewData["Title"] = "Edit Product";
}

<h3>Edit Brand</h3>

<form asp-controller="Brand" asp-action="Update" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="name">Name</label>
        <input class="form-control" placeholder="Enter a name" asp-for="Name" />
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>

<a asp-controller="Product" asp-action="List">List Brands</a>